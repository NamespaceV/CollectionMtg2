<Window x:Class="CollectionMtg2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollectionMtg2.ViewModel"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel, IsDesignTimeCreatable=False}"
        mc:Ignorable="d"
        Title="{Binding Path=WindowTitle}" Height="632.85" Width="800">
    <Grid>
        <DockPanel>
            <DockPanel DockPanel.Dock="Top">
                <Button Content="📂" HorizontalAlignment="Left" Height="24"  Margin="10,10,0,0" VerticalAlignment="Top" Width="45" Command="{Binding Path=OpenCollectionCommand}" />
                <TextBox Height="24" Margin="0,10,10,0" TextWrapping="NoWrap" Text="{Binding Path=CollectionPath}" />
            </DockPanel>
            <DockPanel DockPanel.Dock="Top">
                <Button Content="📂" HorizontalAlignment="Left" Height="24"  Margin="10,10,0,0" VerticalAlignment="Top" Width="45" Command="{Binding Path=OpenSetCommand}" />
                <TextBox Height="24" Margin="0,10,10,0" TextWrapping="NoWrap" Text="{Binding Path=CardListPath}"  VerticalAlignment="Top" />
            </DockPanel>
            <DockPanel DockPanel.Dock="Top">
                <TextBox HorizontalAlignment="Left" Height="24" Margin="10,10,0,0" VerticalAlignment="Top" Width="135" Text="{Binding Path=SetName}"/>
                <TextBox HorizontalAlignment="Left" Height="24" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Path=MaxCardInSet}" VerticalAlignment="Top" Width="130"/>
                <Button Content="Get Cards Form Set" HorizontalAlignment="Left" Height="24"  Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Command="{Binding Path=LoadSetCommand}" />
                <Button Content="Save Card list as Set file" HorizontalAlignment="Left" Height="24"  Margin="10,10,0,0" VerticalAlignment="Top" Width="152" Command="{Binding Path=SaveSetCommand}" />
            </DockPanel>
            <DockPanel DockPanel.Dock="Top">
                <TextBox HorizontalAlignment="Left" Height="24" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Path=CollectionSetFilter}" VerticalAlignment="Top" Width="158"/>
                <Button Content="Show collection" Height="24"  Margin="10,10,10,0" Width="120" Command="{Binding Path=LoadCollectionCommand}" />
                <Button Content="Find missing" HorizontalAlignment="Left" Height="24"  Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Command="{Binding Path=CompareCommand}" />
                <CheckBox Content="Playsets" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" IsChecked="{Binding Path=WantPlaysets}"/>
            </DockPanel>
            <DockPanel>
                <DockPanel DockPanel.Dock="Right">
                    <StackPanel Margin="10,10,10,10" HorizontalAlignment="Right" Width="249">
                        <Label Content="{Binding SelectedCard.DisplayName}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <Image Source="{Binding SelectedCard.DisplayImage}" HorizontalAlignment="Left" Width="249" Height="312" />
                    </StackPanel>
                </DockPanel>
                <DockPanel>
                    <DockPanel DockPanel.Dock="bottom">
                        <Button Content="Copy to clipboard" HorizontalAlignment="Left" Height="24"  Margin="10,10,0,0" VerticalAlignment="Top" Width="112" Command="{Binding Path=CopyToClipboardCommand}" />
                    </DockPanel>
                    <ListBox Margin="10,10,10,10"  ItemsSource="{Binding CardsList}" SelectedItem="{Binding SelectedCard}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DisplayName}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </DockPanel>
        </DockPanel>

    </Grid>
</Window>
